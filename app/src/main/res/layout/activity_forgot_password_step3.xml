<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    tools:context="com.build1.rapepreventionapp.Login.ForgotPassStep3" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logotypeafinal" />

        <TextView
            android:id="@+id/tvResettingPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resetting password."
            android:textSize="23dp"
            android:layout_below="@id/imageView"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_profile"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@drawable/profilepic"
            android:layout_below="@id/tvResettingPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="Full Name"
            android:textStyle="bold"
            android:layout_toRightOf="@id/circle_profile"
            android:layout_below="@id/tvResettingPassword"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:text="Strong passwords include alphanumeric characters with at least one uppercase letter."
            android:layout_below="@id/circle_profile" />

        <EditText
            android:id="@+id/editTextNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New password"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tvDesc" />

        <TextView
            android:id="@+id/tvTypeAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Type in your new password one more time."
            android:textStyle="bold"
            android:layout_below="@id/editTextNewPassword"/>

        <EditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re-type new password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvTypeAgain"/>

        <Button
            android:id="@+id/buttonNextone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/nextbutton"
            android:onClick="btnOnClickSearchEmail"
            android:text="Save password"
            android:textColor="#fff"
            android:layout_below="@id/editTextConfirmPassword"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:padding="10dp"/>

    </RelativeLayout>
</ScrollView>