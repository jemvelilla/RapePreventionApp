<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.build1.rapepreventionapp.EditProfile">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="106dp"
        android:layout_height="103dp"
        android:src="@drawable/icon2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editProfile"
        android:layout_width="126dp"
        android:layout_height="36dp"
        android:layout_marginBottom="325dp"
        android:layout_marginTop="32dp"
        android:text="Edit Profile"
        android:textSize="23dp"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <EditText
        android:id="@+id/editTextFN"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:hint="First Name*"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editProfile" />

    <EditText
        android:id="@+id/editTextLN"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:hint="Last Name*"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextFN"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="109dp"
        android:layout_height="45dp"
        android:hint="Age*"
        android:inputType="number"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="151dp" />

    <EditText
        android:id="@+id/editTextDOB"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:hint="Birthday*"
        android:inputType="date"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextAge"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextCAdd"
        android:layout_width="317dp"
        android:layout_height="46dp"
        android:layout_marginBottom="444dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="24dp"
        android:hint="Current Address*"
        android:inputType="textLongMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextCP1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="396dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="24dp"
        android:hint="Contact Person 1*"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextCP1Num"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextCP1Num"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="4dp"
        android:hint="Number*"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextCP1"
        app:layout_constraintTop_toBottomOf="@+id/editTextCAdd" />

    <EditText
        android:id="@+id/editTextCP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="352dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:hint="Contact Person 2*"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextCP2Num"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCP1" />

    <EditText
        android:id="@+id/editTextCP2Num"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:hint="Number*"
        android:inputType="phone"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextCP2"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextCP3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="296dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:hint="Contact Person 3"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editText5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextCP3Num"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="4dp"
        android:hint="Number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextCP3"
        app:layout_constraintTop_toBottomOf="@+id/editTextCP2Num" />

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rectangle"
        android:onClick="btnOnClickChangePassword"
        android:padding="10dp"
        android:text="Change Password"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDOB"
        app:layout_constraintVertical_bias="0.578" />

    <Button
        android:id="@+id/btnSaveChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rectangle"
        android:onClick="btnOnClickSaveChanges"
        android:padding="10dp"
        android:text="Save Changes"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDOB"
        app:layout_constraintVertical_bias="0.738" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="160dp"
        android:background="@drawable/rectangle"
        android:onClick="btnOnClickCancel"
        android:padding="10dp"
        android:text="Cancel"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDOB"
        app:layout_constraintVertical_bias="0.738" />

</android.support.constraint.ConstraintLayout>
