<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.build1.rapepreventionapp.Login.AccountVerification">


    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/logotypeafinal" />

    <TextView
        android:id="@+id/tvConfirmYourEmail"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Confirm Your Email."
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/desc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvConfirmYourEmail"
        android:layout_marginTop="15dp"
        android:text="To continue using TULONG, you'll need to confirm first your email. "/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="email@email.com"
        android:textStyle="bold"
        android:textColor="#000"/>

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:onClick="btnOnClickVerify"
        android:padding="10dp"
        android:text="Open Email"
        android:textColor="#fff"
        android:layout_below="@id/email"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_wborder"
        android:onClick="btnOnClickLogout"
        android:padding="10dp"
        android:text="Log Out"
        android:textColor="#FF4081"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/btnVerify"
        android:layout_below="@id/email"/>

</RelativeLayout>