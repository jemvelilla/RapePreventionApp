<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.build1.rapepreventionapp.Login.ForgotPassStep2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/logotypeafinal" />

    <TextView
        android:id="@+id/tvResettingPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resetting password."
        android:layout_marginTop="30dp"
        android:textSize="23dp"
        android:layout_below="@id/imageView"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvWeWillSendALink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We will send a link to your email."
        android:textSize="15dp"
        android:layout_below="@id/tvResettingPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnGmail"
        android:layout_width="145dp"
        android:layout_height="43dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvWeWillSendALink"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/nextbutton"
        android:onClick="btnOnClickOpenGmail"
        android:text="Open Email"
        android:textColor="#fff" />

</RelativeLayout>