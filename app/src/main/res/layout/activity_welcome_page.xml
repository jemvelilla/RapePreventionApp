<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.build1.rapepreventionapp.Welcome">

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="@drawable/icon2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/welcomeText"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="90sp"
        android:paddingLeft="30dp"
        android:text="It can happen to"
        android:textSize="30sp"
        android:fontFamily="Segoe UI"
        android:textColor="#263238"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="100dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/icon2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/anyone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30sp"
        android:paddingTop="10sp"
        android:text="ANYONE"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="Segoe UI"
        android:textColor="#263238"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/welcomeText" />

    <TextView
        android:id="@+id/and"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30sp"
        android:paddingTop="10sp"
        android:text="and"
        android:textSize="30sp"
        android:fontFamily="Segoe UI"
        android:textColor="#263238"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/anyone"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/anyone" />

    <TextView
        android:id="@+id/anywhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="ANYWHERE"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="Segoe UI"
        android:textColor="#263238"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/and"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/and" />

    <Button
        android:id="@+id/signUp"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:text="let's get started"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:background="@drawable/shape"
        android:padding="15sp"
        android:onClick="btnOnClickSignUp"
        app:layout_constraintRight_toLeftOf="@+id/logIn2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/anywhere"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/logIn2" />                           <!-- ON CLICK -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:text="Already have an account?"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:text="Log in."
        android:textSize="15dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="btnOnClickLoginPage"
        android:clickable="true"
        />

</android.support.constraint.ConstraintLayout>